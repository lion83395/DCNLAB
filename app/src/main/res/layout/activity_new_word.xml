<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="體重 單位:KG" />

    <EditText
        android:id="@+id/edit_weight"
        style="@style/text_view_style"
        android:layout_height="wrap_content"
        android:hint="輸入體重(KG)"
        android:inputType="textAutoComplete" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收縮壓 單位:mmHg" />

    <EditText
        android:id="@+id/edit_pressure"
        style="@style/text_view_style"
        android:layout_height="wrap_content"
        android:hint="輸入收縮壓(mmHg)"
        android:inputType="textAutoComplete" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="舒張壓 單位:mmHg" />
    <EditText
        android:id="@+id/edit_pressuredown"
        style="@style/text_view_style"
        android:hint="輸入舒張壓 (mmHg)"
        android:inputType="textAutoComplete" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="血糖 單位:mg/dl" />
    <EditText
        android:id="@+id/edit_bloodsugar"
        style="@style/text_view_style"
        android:hint="輸入血糖 (mg/dl)"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期時間" />

    <EditText
        android:id="@+id/edit_time"
        style="@style/text_view_style"
        android:hint="輸入日期"
        android:inputType="date" />
    <EditText
        android:id="@+id/edit_time1"
        style="@style/text_view_style"
        android:hint="輸入時間 "
        android:inputType="time" />
    <Button
        android:id="@+id/button_save"
        style="@style/button_style"
        android:text="儲存" />


</LinearLayout>